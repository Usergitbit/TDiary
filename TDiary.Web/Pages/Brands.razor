@page "/brands"

@using TDiary.Common.Models.Entities

@attribute [Authorize]

@if (!IsBusy)
{

    <h3>Brands</h3>

    <MudTable Items="@BrandsList" Hover="true" Loading="@IsLoadingBrands" OnRowClick="RowClickEvent" T="Brand">
        <HeaderContent>
            <MudTh>Name</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
        </RowTemplate>
    </MudTable>

    <MudFab Icon="@Icons.Material.Filled.Add" aria-label="add" OnClick="OnAddBrandClick" Class="mt-5"/>
}
else
{
    <h3>Busy</h3>
}