@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudText Class="mr-3">Hello, @context.User.Identity.Name!</MudText>
        </MudHidden>
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" OnClick="BeginSignOut"></MudIconButton>
    </Authorized>
    <NotAuthorized>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudText>Log in</MudText>
        </MudHidden>
        <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" OnClick="BeginSignIn"></MudIconButton>
    </NotAuthorized>
</AuthorizeView>